<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/homebg">

   <!-- The drawer icon and screen title-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:onClick="openDrawer"
            android:src="@drawable/ic_drawer" />

        <TextView
            style="@style/MainTitleStyle"
            android:text="@string/title_ridingnow" />

        <TextView
            style="@style/MainTitleStyle"
            android:layout_alignParentRight="true"
            android:text="Refresh"
            android:layout_marginRight="5dp"
            android:textStyle="normal" />

    </RelativeLayout>
<!-- The main content view -->
<FrameLayout
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <!-- android:background="@drawable/homebg"-->


    <RelativeLayout
        android:id="@+id/linerla"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/circles"
        >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:id="@+id/profileImage"
        />
    </RelativeLayout>
</FrameLayout>


    <!-- The navigation drawer -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@drawable/menubg">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/prImage"
            android:src="@drawable/ic_launcher"
            android:scaleType="fitCenter"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/usernameid"
            style="@style/MenuTitleStyle"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/usertitleid"
            style="@style/MenuTitleStyle"
            android:layout_gravity="center_horizontal"
            />

        <ListView
            android:id="@+id/list_view_drawer"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/logoutid"
            android:src="@drawable/logout"
            android:scaleType="fitCenter"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
