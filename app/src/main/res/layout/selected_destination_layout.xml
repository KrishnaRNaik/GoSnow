<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title1id"
        style="@style/MainTitleStyle"
        android:layout_marginTop="15dp"
        android:text="@string/title_nexttrip1"
        />
    <TextView
        android:id="@+id/title2id"
        style="@style/MainTitleStyle"
        android:layout_marginTop="2dp"
        android:text="@string/title_nexttrip2"
        android:layout_below="@id/title1id"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/title2id"
        android:id="@+id/seperatorid"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/seldestid"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="15dp"
        android:text="Select"
        android:layout_below="@+id/seperatorid"
        android:onClick="GetDestinationList"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seperatorid"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/leftarrow"
        android:onClick="GetDestinationList"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seldestid"
        android:layout_marginTop="15dp"
        >

        <TextView
            style="@style/MenuTitleStyle"
            android:text="Back"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:onClick="showPreviousStep"
            />
        <TextView
            style="@style/MenuTitleStyle"
            android:text="Next"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textColor="#000000"
            android:onClick="showNextStep"
            />
    </RelativeLayout>

</RelativeLayout>
